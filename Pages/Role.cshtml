@page
@model Code1stUsersRoles.Pages.RoleModel

@{
    ViewData["Title"] = "Role Management";
}

<h2>Role Management</h2>

<p>
    <a asp-page="CreateRole">Create New</a>
</p>


<h3>Existing Roles</h3>
<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Description</th>
            <th>Created Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Name</td>
                <td>@role.Description</td>
                <td>@role.CreatedDate.ToString("yyyy-MM-dd")</td>
<td>
    <form method="post" asp-page-handler="Delete" asp-route-id="@role.Id">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</td>

            </tr>
        }
    </tbody>
</table>
