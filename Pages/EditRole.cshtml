@page
@model Code1stUsersRoles.Pages.EditRoleModel

@{
    ViewData["Title"] = "Edit User Roles";
}

<h2>Edit User Roles</h2>

<form method="post">
    <div>
        <h4>User: @Model.User.UserName</h4>
    </div>
    <div>
        <label>Available Roles</label>
        @foreach (var role in Model.AvailableRoles)
        {
    <div>
        <input type="radio" id="@role" name="UserRoles" value="@role" @(Model.UserRoles.Contains(role) ? "checked" : "") />
        <label for="@role">@role</label>
    </div>
        }
    </div>
    <button type="submit">Update Roles</button>
</form>
